<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.frzterr.app.ui.home.HomeFragment"
        android:label="Home" />

    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.frzterr.app.ui.explore.ExploreFragment"
        android:label="Explore" />

    <fragment
        android:id="@+id/messageFragment"
        android:name="com.frzterr.app.ui.message.MessageFragment"
        android:label="Message" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.frzterr.app.ui.profile.ProfileFragment"
        android:label="Profile" >
        <action
            android:id="@+id/action_profileFragment_self"
            app:destination="@id/publicProfileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.frzterr.app.ui.profile.EditProfileFragment"
        android:label="Edit Profile" />

    <fragment
        android:id="@+id/publicProfileFragment"
        android:name="com.frzterr.app.ui.profile.ProfileFragment"
        android:label="Public Profile" >
        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
         <action
            android:id="@+id/action_profileFragment_self"
            app:destination="@id/publicProfileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/imageViewerFragment"
        android:name="com.frzterr.app.ui.viewer.ImageViewerDialogFragment"
        android:label="Image Viewer" />

</navigation>
