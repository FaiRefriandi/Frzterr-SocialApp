<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootAuth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:background="@color/background">

    <!-- TOP SECTION -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk ke Akun Anda"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan email dan kata sandi untuk masuk"
            android:textColor="#B8B8B8"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- FORM SHEET (BOTTOM) -->
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_sheet"
        android:padding="30dp"
        android:layout_marginTop="50dp"
        android:clipToOutline="true"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.50">

    <!-- LOGIN FORM -->
        <LinearLayout
            android:id="@+id/layoutLoginForm"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:placeholderText="Email"
                app:placeholderTextColor="#888888"
                app:hintEnabled="false"
                app:boxBackgroundMode="filled"
                app:cursorColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeColor="@android:color/transparent"
                app:boxBackgroundColor="#2A2A2A"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtLoginEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#888888"
                    android:inputType="textEmailAddress"
                    android:minHeight="56dp"
                    android:paddingVertical="14dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:placeholderText="Password"
                app:placeholderTextColor="#888888"
                app:hintEnabled="false"
                app:cursorColor="@color/white"
                app:endIconMode="password_toggle"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeColor="@android:color/transparent"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#2A2A2A"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtLoginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textColorHint="#888888"
                    android:inputType="textPassword"
                    android:minHeight="56dp"
                    android:paddingVertical="14dp"
                    android:textColor="#FFFFFF" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lupa Password?"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"/>

            <!-- Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Masuk"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3B82F6"
                app:cornerRadius="50dp"
                android:minHeight="62dp"
                android:paddingVertical="18dp" />
        </LinearLayout>

        <!-- SIGNUP FORM -->
        <LinearLayout
            android:id="@+id/layoutSignupForm"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:placeholderText="Nama Pengguna"
                app:placeholderTextColor="#888888"
                app:hintEnabled="false"
                app:boxBackgroundMode="filled"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:cursorColor="@color/white"
                app:boxStrokeColor="@android:color/transparent"
                app:boxBackgroundColor="#2A2A2A"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSignupName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Pengguna"
                    android:textColorHint="#888888"
                    android:inputType="textPersonName"
                    android:minHeight="56dp"
                    android:paddingVertical="14dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:placeholderText="Email"
                app:placeholderTextColor="#888888"
                app:hintEnabled="false"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:cursorColor="@color/white"
                app:hintTextAppearance="@style/AuthHintTextAppearance"
                app:boxStrokeColor="@android:color/transparent"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#2A2A2A"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSignupEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textColorHint="#888888"
                    android:textColor="#FFFFFF"
                    android:inputType="textEmailAddress"
                    android:minHeight="56dp"
                    android:paddingVertical="14dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:placeholderText="Password"
                app:placeholderTextColor="#888888"
                app:hintEnabled="false"
                app:endIconMode="password_toggle"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:cursorColor="@color/white"
                app:hintTextAppearance="@style/AuthHintTextAppearance"
                app:boxStrokeColor="@android:color/transparent"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#2A2A2A"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSignupPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textColorHint="#888888"
                    android:textColor="#FFFFFF"
                    android:inputType="textPassword"
                    android:minHeight="56dp"
                    android:paddingVertical="14dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirm -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:placeholderText="Masukkan Uembali Password"
                app:placeholderTextColor="#888888"
                app:hintEnabled="false"
                app:endIconMode="password_toggle"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintTextColor="@color/white"
                app:cursorColor="@color/white"
                app:hintTextAppearance="@style/AuthHintTextAppearance"
                android:focusableInTouchMode="false"
                app:boxStrokeColor="@android:color/transparent"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#2A2A2A"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSignupConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Ulang Password"
                    android:textColorHint="#888888"
                    android:textColor="#FFFFFF"
                    android:inputType="textPassword"
                    android:minHeight="56dp"
                    android:paddingVertical="14dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Daftar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3B82F6"
                app:cornerRadius="50dp"
                android:minHeight="62dp"
                android:paddingVertical="18dp" />
        </LinearLayout>

        <!-- Divider OR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#888888"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:text="atau"
                android:textColor="#DDDDDD"

                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#888888"/>
        </LinearLayout>


        <!-- Google Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogleLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="Lanjutkan dengan Google"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2A2A2A"
            app:strokeColor="#444444"
            app:strokeWidth="1dp"
            app:icon="@drawable/google_logo"
            app:iconSize="28dp"
            app:iconTint="@null"
            app:iconPadding="10dp"
            app:iconGravity="textStart"
            app:cornerRadius="50dp"
            android:minHeight="50dp"
            android:paddingVertical="14dp" />

        <!-- Switch Login / Signup -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvGotoLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah punya akun? Masuk"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvGotoSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum punya akun? Daftar"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
