<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- SEARCH BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="54dp"
        android:background="@color/background">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <!-- Search Input -->
<!--        <EditText-->
<!--            android:id="@+id/etSearch"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="45dp"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_marginStart="12dp"-->
<!--            android:layout_marginEnd="8dp"-->
<!--            android:paddingStart="16dp"-->
<!--            android:paddingEnd="16dp"-->
<!--            app:cursorColor="@color/white"-->
<!--            android:hint="Cari"-->
<!--            android:textColorHint="#666666"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="15sp"-->
<!--            android:background="@drawable/bg_search_input"-->
<!--            android:inputType="text"-->
<!--            android:imeOptions="actionSearch"-->
<!--            android:maxLines="1"/>-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            app:placeholderText="Cari"
            app:placeholderTextColor="#888888"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#2A2A2A"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeColor="@android:color/transparent"
            app:cursorColor="@color/white"
            app:boxCornerRadiusTopStart="14dp"
            app:boxCornerRadiusTopEnd="14dp"
            app:boxCornerRadiusBottomStart="14dp"
            app:boxCornerRadiusBottomEnd="14dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cari"
                android:textColor="@android:color/white"
                android:textColorHint="#888888"
                android:inputType="textPersonName"
                android:minHeight="45dp"
                android:paddingVertical="14dp"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Clear Button -->
        <ImageView
            android:id="@+id/btnClear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Clear"
            app:tint="#999999"
            android:visibility="gone"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2A2A2A"/>

    <!-- CONTENT CONTAINER -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- RECENT SECTION -->
        <LinearLayout
            android:id="@+id/recentSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Recent Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pencarian terbaru"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvSeeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat semua"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Recent List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <!-- Empty Recent State -->
            <TextView
                android:id="@+id/emptyRecent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:text="Tidak ada pencarian terbaru"
                android:textColor="#666666"
                android:textSize="15sp"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- SEARCH RESULTS -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSearchResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <!-- Empty Search State -->
        <LinearLayout
            android:id="@+id/emptySearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak ada hasil pencarian"
                android:textColor="#666666"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cari yang lain"
                android:textColor="#999999"
                android:textSize="13sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
