<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Primary content is RecyclerView. Removed NestedScrollView to allow proper Scroll Restoration and Performance -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTabContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvEmptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum ada postingan"
            android:textColor="#666666"
            android:textSize="15sp"/>
    </LinearLayout>

    <!-- SHIMMER LOADING OVERLAY -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:shimmer_duration="800">

        <include layout="@layout/shimmer_home_placeholder" />

    </com.facebook.shimmer.ShimmerFrameLayout>

</FrameLayout>
