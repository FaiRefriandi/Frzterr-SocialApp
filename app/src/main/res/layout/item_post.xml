<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/background">

    <!-- USER INFO ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- AVATAR -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_placeholder"
            android:contentDescription="User avatar"
            app:shapeAppearanceOverlay="@style/CircleImageView"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- USERNAME -->
            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@username"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <!-- TIMESTAMP -->
            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h ago"
                android:textColor="#999999"
                android:textSize="13sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- POST CONTENT -->
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a sample post content"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:lineSpacingExtra="2dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="52dp"/>

    <!-- POST IMAGE (OPTIONAL) -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgPost"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="12dp"
        android:layout_marginStart="52dp"
        android:visibility="gone"
        android:contentDescription="Post image"
        app:shapeAppearanceOverlay="@style/RoundedImageView"/>

    <!-- ACTION BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginStart="52dp">

        <!-- LIKE BUTTON -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/btnLike"
                android:layout_width="@dimen/post_action_icon_size"
                android:layout_height="@dimen/post_action_icon_size"
                android:src="@drawable/ic_like"
                android:contentDescription="Like"
                app:tint="#808080"/>

            <TextView
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#999999"
                android:textSize="13sp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <!-- COMMENT BUTTON -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/btnComment"
                android:layout_width="@dimen/post_action_icon_size"
                android:layout_height="@dimen/post_action_icon_size"
                android:src="@drawable/ic_comment"
                android:contentDescription="Comment"
                app:tint="#808080"/>

            <TextView
                android:id="@+id/tvCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#999999"
                android:textSize="13sp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <!-- REPOST BUTTON -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/btnRepost"
                android:layout_width="@dimen/post_action_icon_size"
                android:layout_height="@dimen/post_action_icon_size"
                android:src="@drawable/ic_repost"
                android:contentDescription="Repost"
                app:tint="#808080"/>

            <TextView
                android:id="@+id/tvRepostCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#999999"
                android:textSize="13sp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>


    </LinearLayout>

    <!-- DIVIDER -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1A1A1A"
        android:layout_marginTop="12dp"/>

</LinearLayout>
