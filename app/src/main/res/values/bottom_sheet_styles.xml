<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Comment Bottom Sheet Style -->
    <style name="CommentBottomSheetDialog" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CommentBottomSheet</item>
    </style>

    <style name="CommentBottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/CommentBottomSheetShape</item>
        <item name="behavior_peekHeight">600dp</item>
        <item name="behavior_fitToContents">false</item>
        <item name="behavior_halfExpandedRatio">0.5</item>
    </style>

    <style name="CommentBottomSheetShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>
